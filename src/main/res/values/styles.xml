<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="question_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/text_med_margin</item>
        <item name="android:layout_marginLeft">@dimen/q_margin</item>
        <item name="android:layout_marginRight">@dimen/q_margin</item>
        <item name="android:layout_marginTop">@dimen/q_margin</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize"></item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="check_opt">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/options_margins</item>
        <item name="android:layout_marginRight">@dimen/option_text</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">@dimen/text_med_margin</item>
    </style>

    <style name="edit_field">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/colorSecondary</item>
        <item name="android:ems">10</item>
        <item name="android:inputType">number</item>
        <item name="android:textSize">@dimen/option_text</item>
    </style>

    <style name="answer_radio_group">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="radio_opt">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">4dp</item>
        <item name="android:textSize">36sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="title_image">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_weight">5</item>
    </style>

    <style name="divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">4dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/colorAccent</item>
    </style>

</resources>
